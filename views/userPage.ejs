<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/font.css">
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('header.ejs') %>
  <section class="sec mypage-info">
    <div class="container">
      <div class="row">
        <div class="box col-3 g-0 d-flex align-items-center">
          <% if(posts[0].User.profileImg) { %>
            <img src="/img/<%= posts[0].User.profileImg %>" class="mypage-img" alt="profile image">
            <% } else { %>
          <img src="/img/profileIconDefault.png" alt="default profile image" class="profileImg mypage-img">
          <% } %>
        </div>
        <div class="box col-9 g-0 p-0">
          <div class="info-wrap">
            <div class="infoText-wrap">
              <textarea type="text" name="nickname" class="mypage-nickname fw-bold infoTextArea" readonly><%= posts[0].User.nickname %></textarea>
              <textarea type="text" name="intro" class="mypage-intro infoTextArea"><%= posts[0].User.intro %></textarea>
            </div>
          </div>
        </div>
          <% if(isMypage) { %>
            <div class="info-edit-wrap d-flex justify-content-end">
              <button type="button" class="infoEditBtn" data-id="<%= user.id %>"><i class="bi bi-pencil"></i></button>
              <button type="reset" class="infoResetBtn"></button>
            </div>
          <% } %>
      </div>
    </div>
  </section>
  <section class="sec post-list">
      <%- include('blog-list.ejs') %>
    </div>
        <div class="pagination justify-content-center">
          <% for(let i = 0; i < totalPage; i++){ %>
            <% if((i + 1) == pageNum) { %>
              <a href="/userPage/<%= posts[0].userId %>/<%= (i + 1) %>" class="currentPage"><%= (i + 1) %></a>
            <% } else { %>
              <a href="/userPage/<%= posts[0].userId %>/<%= (i + 1) %>"><%= (i + 1) %></a>
            <% } %>
          <% } %>
        </div>
  </section>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  <script src="/js/index.js"></script>

</body>
</html>